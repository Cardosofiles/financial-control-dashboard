{
  // Nome do projeto
  "name": "web-dashboard-financial-controller",
  
  // Define o projeto como privado, impedindo publicação no npm
  "private": true,
  
  // Versão do projeto
  "version": "0.0.0",
  
  // Define o projeto como utilizando módulos ES (ESM)
  "type": "module",

  // Scripts de comandos do projeto
  "scripts": {
    // Inicia o servidor de desenvolvimento usando Vite
    "dev": "vite",
    
    // Executa build do TypeScript e gera a versão de produção com Vite
    "build": "tsc -b && vite build",
    
    // Executa o ESLint para analisar o código em busca de problemas
    "lint": "eslint .",
    
    // Pré-visualiza a build gerada em um servidor local
    "preview": "vite preview"
  },

  // Dependências necessárias para o projeto em produção
  "dependencies": {
    // Resolvedores de validação para formulários com React Hook Form
    "@hookform/resolvers": "^3.9.0",
    
    // Componentes de diálogo/modal acessíveis para React
    "@radix-ui/react-dialog": "^1.1.2",
    
    // Componente de menu suspenso acessível
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    
    // Conjunto de ícones da Radix UI
    "@radix-ui/react-icons": "^1.3.0",
    
    // Componente de rótulo acessível, usado com formulários
    "@radix-ui/react-label": "^2.1.0",
    
    // Componente de seleção acessível
    "@radix-ui/react-select": "^2.1.2",
    
    // Componente de separador para dividir layouts
    "@radix-ui/react-separator": "^1.1.0",
    
    // Componente utilitário para conteúdo de slots no React
    "@radix-ui/react-slot": "^1.1.0",
    
    // Gerenciamento de estado de dados remotos no React (fetch API)
    "@tanstack/react-query": "^5.59.13",
    
    // Cliente HTTP para requisições AJAX/HTTP
    "axios": "^1.7.7",
    
    // Facilita a variação condicional de classes CSS
    "class-variance-authority": "^0.7.0",
    
    // Junta classes CSS condicionalmente
    "clsx": "^2.1.1",
    
    // Manipulação e formatação de datas no JavaScript
    "date-fns": "^4.1.0",
    
    // Armazenamento local offline com IndexedDB, WebSQL e localStorage
    "localforage": "^1.10.0",
    
    // Pacote de ícones personalizáveis para React
    "lucide-react": "^0.447.0",
    
    // Utilitário para filtrar e ordenar listas baseadas em strings
    "match-sorter": "^6.3.4",
    
    // Biblioteca principal para construção de interfaces de usuário
    "react": "^18.3.1",
    
    // Manipulação do DOM com React
    "react-dom": "^18.3.1",
    
    // Gerenciamento de metadados `<head>` assíncrono no React
    "react-helmet-async": "^2.0.5",
    
    // Manipulação e validação de formulários em React
    "react-hook-form": "^7.53.0",
    
    // Gerenciamento de rotas em aplicações React
    "react-router-dom": "^6.26.2",
    
    // Biblioteca de gráficos para React
    "recharts": "^2.12.7",
    
    // Exibição de notificações visuais
    "sonner": "^1.5.0",
    
    // Função utilitária para ordenar objetos por propriedades
    "sort-by": "^0.0.2",
    
    // Mescla de classes Tailwind de maneira eficiente
    "tailwind-merge": "^2.5.3",
    
    // Extensão para adicionar animações utilitárias ao Tailwind CSS
    "tailwindcss-animate": "^1.0.7",
    
    // Validação e parsing de esquemas de dados
    "zod": "^3.23.8"
  },

  // Dependências necessárias apenas para desenvolvimento
  "devDependencies": {
    // Configurações base do ESLint para JavaScript
    "@eslint/js": "^9.11.1",
    
    // Tipos TypeScript para funcionalidades do Node.js
    "@types/node": "^22.7.4",
    
    // Tipos TypeScript para React
    "@types/react": "^18.3.10",
    
    // Tipos TypeScript para ReactDOM
    "@types/react-dom": "^18.3.0",
    
    // Plugin do Vite para otimizar o React
    "@vitejs/plugin-react": "^4.3.2",
    
    // Ferramenta para adicionar prefixos de navegador no CSS
    "autoprefixer": "^10.4.20",
    
    // Ferramenta de análise de código para garantir boas práticas
    "eslint": "^9.11.1",
    
    // Plugin do ESLint para garantir o uso correto dos hooks no React
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    
    // Plugin para recarregamento automático no desenvolvimento React
    "eslint-plugin-react-refresh": "^0.4.12",
    
    // Lista de variáveis globais para análise de código
    "globals": "^15.9.0",
    
    // Ferramenta de processamento de CSS com suporte a plugins
    "postcss": "^8.4.47",
    
    // Framework de CSS utilitário altamente customizável
    "tailwindcss": "^3.4.13",
    
    // Suporte a TypeScript, uma linguagem de tipagem estática para JS
    "typescript": "^5.5.3",
    
    // Integra ESLint com TypeScript para análise de código
    "typescript-eslint": "^8.7.0",
    
    // Ferramenta de bundling e build para projetos modernos como React
    "vite": "^5.4.8"
  }
}
